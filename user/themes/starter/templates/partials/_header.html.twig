    <nav class="mobile-nav">
        <div class="top">
            <a class="logo" href="{{ base_url == '' ? '/' : base_url }}">
                <img src="{{ url('theme://images/logo-pulx.svg') }}" alt="PulX">
            </a>

            <button class="mobile-menu-closer">Fermer</button>
        </div>

        <div class="main">
